{
  "name": "fogsift",
  "version": "0.2.0",
  "description": "Straight answers to complicated questions",
  "private": true,
  "scripts": {
    "start": "node scripts/dev-start.js",
    "start:site": "node scripts/dev-start.js --no-helpers",
    "dev": "npm run build && npm-run-all --parallel serve watch",
    "dev:functions": "npm run build && npx wrangler pages dev dist",
    "serve": "browser-sync start --config bs-config.js",
    "watch": "chokidar 'src/**/*' -c 'node scripts/build.js'",
    "build": "node scripts/build.js",
    "deploy": "npm run build && npx wrangler pages deploy dist --project-name fogsift --branch main",
    "quick-deploy": "node scripts/deploy.js",
    "deploy:dry": "node scripts/deploy.js --dry-run",
    "preview": "npm run build && npm run dev",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major",
    "mcp:status": "node scripts/mcp-status-writer.js",
    "mcp:watch": "node scripts/mcp-status-writer.js --watch",
    "mcp:dev": "npm run mcp:status && npm run dev",
    "test": "node tests/suite.js",
    "lint": "eslint src/js/",
    "lint:fix": "eslint src/js/ --fix",
    "lint:images": "node scripts/lint-images.js",
    "audit": "npm run build && node scripts/audit.js",
    "audit:quick": "node scripts/audit.js",
    "test:webhook": "node scripts/test-webhook.js",
    "test:webhook:shop": "node scripts/test-webhook.js http://localhost:8788/api/webhook/kofi shopOrder",
    "test:webhook:commission": "node scripts/test-webhook.js http://localhost:8788/api/webhook/kofi commission"
  },
  "keywords": [
    "consulting",
    "fogsift"
  ],
  "author": "Christopher Tavolazzi",
  "license": "UNLICENSED",
  "dependencies": {
    "marked": "^15.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "browser-sync": "^3.0.4",
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "html-validate": "^10.7.0",
    "lighthouse": "^13.0.1",
    "lucide-react": "^0.575.0",
    "npm-run-all": "^4.1.5",
    "pa11y": "^9.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7"
  }
}
