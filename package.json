{
  "name": "fogsift",
  "version": "0.1.0",
  "description": "Straight answers to complicated questions",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run build && npm-run-all --parallel serve watch",
    "serve": "browser-sync start --server dist --port 5050 --no-open --files 'dist/**/*'",
    "watch": "chokidar 'src/**/*' -c 'node scripts/build.js'",
    "build": "node scripts/build.js",
    "deploy": "npm run build && npx wrangler pages deploy dist --project-name fogsift",
    "quick-deploy": "node scripts/deploy.js",
    "deploy:dry": "node scripts/deploy.js --dry-run",
    "preview": "npm run build && npm run dev",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major",
    "mcp:status": "node scripts/mcp-status-writer.js",
    "mcp:watch": "node scripts/mcp-status-writer.js --watch",
    "mcp:dev": "npm run mcp:status && npm run dev",
    "lint": "eslint src/js/",
    "lint:fix": "eslint src/js/ --fix"
  },
  "keywords": [
    "consulting",
    "fogsift"
  ],
  "author": "Christopher Tavolazzi",
  "license": "UNLICENSED",
  "dependencies": {
    "marked": "^15.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "browser-sync": "^3.0.4",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "npm-run-all": "^4.1.5"
  }
}
